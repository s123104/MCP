    "filesystem": {
      "id": "filesystem",
      "name": "Filesystem",
      "description": "提供對本地檔案系統的安全存取和管理能力，支援檔案讀寫、目錄操作等。預設允許讀寫操作。",
      "category": "檔案系統",
      "image": "mcp/filesystem",
      "environment_vars": {
        "ALLOWED_PATHS": "/workspace:/data:/home/user/projects",
        "MAX_FILE_SIZE": "100MB",
        "LOG_LEVEL": "INFO",
        "READ_WRITE_MODE": "true"
      },
      "volumes": [
        "./workspace:/workspace",
        "./data:/data",
        "~/projects:/home/user/projects"
      ],
      "security_level": "medium",
      "docker_required": true,
      "best_practices": {
        "read_only": false,
        "memory_limit": "256m",
        "cpu_limit": "0.5",
        "network_mode": "none",
        "user": "nobody",
        "security_opt": ["no-new-privileges:true"],
        "cap_drop": ["ALL"],
        "cap_add": ["CHOWN", "DAC_OVERRIDE"]
      },
      "default_ports": [],
      "official": true,
      "reference_url": "https://github.com/modelcontextprotocol/servers/tree/main/src/filesystem",
      "popularity": "極高",
      "use_cases": [
        "程式碼編輯",
        "文檔管理",
        "項目開發",
        "檔案搜尋",
        "自動化腳本"
      ]
    },
